<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_margin="12dp"
    app:cardCornerRadius="24dp"
    app:cardElevation="20dp">



    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/naturCard"
        android:layout_width="match_parent"
        android:layout_height="240sp"
        android:padding="10dp">


        <ImageView
            android:id="@+id/naturImg"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:contentDescription="Imagen del monumento de la tarjeta seleccionada"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txtNaturTitle"
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Título"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/naturImg"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txtNaturDesc"
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Descripción de la actividad"
            android:layout_marginTop="3sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/naturImg"
            app:layout_constraintTop_toBottomOf="@+id/txtNaturTitle" />

        <Button
            android:id="@+id/btnNaturCard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/md_green_500"
            android:text="Ver más..."
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/txtNaturDesc"
            app:layout_constraintStart_toStartOf="@+id/txtNaturDesc"
            app:layout_constraintTop_toBottomOf="@+id/txtNaturDesc" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>