<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:padding="5sp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/Theme.ExtreTur"
    tools:context=".ui.NaturActivity">

    <ImageView
        android:id="@+id/imgTitleGastro"
        android:layout_width="wrap_content"
        android:layout_height="125sp"
        android:src="@drawable/titulo_gastro"
        android:layout_marginTop="10sp"
        android:contentDescription="Titulo en imagen de la NaturActivity.kt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editSearchGastro"
        android:layout_width="230sp"
        android:layout_height="50sp"
        android:hint="Busca una actividad aquÃ­..."
        android:inputType="text"
        android:layout_marginTop="15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgTitleGastro" />

    <Button
        android:id="@+id/btnSearchGastro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/md_green_500"
        android:text="Buscar"
        android:layout_marginTop="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/editSearchGastro"
        app:layout_constraintTop_toBottomOf="@+id/imgTitleGastro"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/gastroCards"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editSearchGastro"
        app:layout_constraintBottom_toTopOf="@+id/nav_gastro"/>
    <include
        layout="@layout/bottom_navigation"
        android:id="@+id/nav_gastro"/>

</androidx.constraintlayout.widget.ConstraintLayout>